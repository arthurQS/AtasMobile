rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function memberPath(wardId) {
      return /databases/$(database)/documents/wards/$(wardId)/members/$(request.auth.uid);
    }

    function isMember(wardId) {
      return isSignedIn() && exists(memberPath(wardId));
    }

    function isAdmin(wardId) {
      return isMember(wardId) && get(memberPath(wardId)).data.role == "admin";
    }

    function canEdit(wardId) {
      return isMember(wardId) &&
        get(memberPath(wardId)).data.role in ["admin", "editor"];
    }

    function isValidAgendaPayload() {
      return request.resource.data.keys().hasOnly([
        "title",
        "date",
        "data",
        "version",
        "updatedAt",
        "updatedBy",
        "status"
      ]) &&
        request.resource.data.title is string &&
        request.resource.data.date is string &&
        request.resource.data.data is map &&
        request.resource.data.version is int &&
        request.resource.data.updatedAt is timestamp &&
        request.resource.data.updatedBy == request.auth.uid &&
        (!("status" in request.resource.data) ||
          request.resource.data.status in ["draft", "final"]);
    }

    match /wards/{wardId} {
      allow read, write: if false;

      match /members/{uid} {
        allow read: if isMember(wardId);
        allow create: if false;
        allow update: if isSignedIn() &&
          request.auth.uid == uid &&
          request.resource.data.role == resource.data.role &&
          request.resource.data.joinedAt == resource.data.joinedAt &&
          request.resource.data.keys().hasOnly([
            "role",
            "displayName",
            "joinedAt",
            "lastActiveAt"
          ]) &&
          (!("displayName" in request.resource.data) ||
            request.resource.data.displayName is string) &&
          (!("lastActiveAt" in request.resource.data) ||
            request.resource.data.lastActiveAt is timestamp);
        allow delete: if isAdmin(wardId);
      }

      match /agendas/{agendaId} {
        allow read: if isMember(wardId);
        allow create: if canEdit(wardId) &&
          request.resource.data.version == 1 &&
          isValidAgendaPayload();
        allow update: if canEdit(wardId) &&
          request.resource.data.version == resource.data.version + 1 &&
          isValidAgendaPayload();
        allow delete: if isAdmin(wardId);
      }

      match /agendas/{agendaId}/edits/{editId} {
        allow read: if isMember(wardId);
        allow create: if isMember(wardId);
        allow update, delete: if false;
      }
    }
  }
}
